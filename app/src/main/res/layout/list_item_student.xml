<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/list_item_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="Student Name"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/list_item_student_assignment"
        android:layout_marginTop="21dp" />
    <TextView
        android:id="@+id/list_item_student_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="User Id"
        android:text=""
        android:layout_alignBaseline="@+id/list_item_student_name"
        android:layout_alignBottom="@+id/list_item_student_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp" />
    <TextView
        android:id="@+id/list_item_student_assignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Assignment"
        android:text=""
        android:layout_marginStart="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />
    <TextView
        android:id="@+id/list_item_queue_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Queue Number"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>